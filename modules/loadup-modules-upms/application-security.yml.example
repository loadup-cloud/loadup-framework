# LoadUp UPMS Security Configuration Example

loadup:
  upms:
    security:
      # JWT 配置
      jwt:
        secret: your-secret-key-change-in-production
        expiration: 86400000  # 24 hours (milliseconds)
        refresh-expiration: 604800000  # 7 days (milliseconds)

      # 登录配置
      login:
        enable-failure-tracking: true
        max-fail-attempts: 5
        lock-duration: 30  # minutes

      # OAuth 配置
      oauth:
        # GitHub OAuth
        github:
          enabled: false
          client-id: your_github_client_id
          client-secret: your_github_client_secret
          redirect-uri: https://yourdomain.com/api/v1/auth/oauth/callback/github

        # 微信 OAuth
        wechat:
          enabled: false
          client-id: your_wechat_app_id
          client-secret: your_wechat_app_secret
          redirect-uri: https://yourdomain.com/api/v1/auth/oauth/callback/wechat

        # Google OAuth
        google:
          enabled: false
          client-id: your_google_client_id
          client-secret: your_google_client_secret
          redirect-uri: https://yourdomain.com/api/v1/auth/oauth/callback/google

