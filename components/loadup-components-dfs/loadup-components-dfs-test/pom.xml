<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.github.loadup.components</groupId>
        <artifactId>loadup-components-dfs</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>loadup-components-dfs-test</artifactId>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- DFS Components -->
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-dfs-api</artifactId>
            <version>${loadup.framework.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-dfs-binder-local</artifactId>
            <version>${loadup.framework.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-dfs-binder-database</artifactId>
            <version>${loadup.framework.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-dfs-binder-s3</artifactId>
            <version>${loadup.framework.version}</version>
        </dependency>

        <!-- Spring Boot Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Database -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <!-- LoadUp TestContainers Component (includes MySQL, Redis, LocalStack/S3, and all drivers) -->
