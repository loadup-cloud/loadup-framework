            <artifactId>loadup-components-dfs-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.github.loadup-cloud</groupId>
            <artifactId>loadup-components-dfs-binder-local</artifactId>
