<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<sqlMap namespace="acts">

    <resultMap id="RM-OBJ-RELATE" class="com.github.loadup.components.testify.dal.dataobject.ObjectRelateDO">
        <result property="id" column="id" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="system" column="system" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="modelObj" column="model_obj" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="modelData" column="model_data" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="modelType" column="model_type" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="dataDesc" column="data_dsc" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="objFlag" column="obj_flag" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="relateSourceId" column="relate_source_id" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="sourceData" column="source_data" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="memo" column="memo" javaType="java.lang.String" jdbcType="VARCHER2"/>
        <result property="gmtCreate" column="gmt_create" javaType="java.util.Date" jdbcType="TIMESTAMP(6)"/>
        <result property="gmtModify" column="gmt_modify" javaType="java.util.Date" jdbcType="TIMESTAMP(6)"/>
    </resultMap>

    <insert id="MS-OBJ-RELATE-INSERT">
        <![CDATA[
        insert  into obj_relate(
        	id,
			system,
			model_obj,
			model_data,
			model_type,
			data_dsc,
			obj_flag,
			relate_source_id,
			memo,
			source_data,
			gmt_create,
			gmt_modify
		) 
        values (
        	#id#,
			#system#,
			#modelObj#,
			#modleData#,
			#modleType#,
			#dataDesc#,
			#objFlag#,
			#relateSourceId#,
			#memo#,
			#sourceData#,
			#gmtCreate#,
			#gmtModify#
        )
    ]]>
    </insert>

    <select id="MS-OBJ-RELATE-QUERY-BY-SYSTEM-AND-MODEL-OBJ" resultMap="RM-OBJ-RELATE">
        <![CDATA[
				select id,
						system,
						model_obj,
						model_data,
						model_type,
						data_dsc,
						obj_flag,
						relate_source_id,
						memo,
						source_data,
						gmt_create,
						gmt_modify
			  from obj_relate
			 where system=#system# and model_obj=#modelObj#
				]]>
    </select>

</sqlMap>
