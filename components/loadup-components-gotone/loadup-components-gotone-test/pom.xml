<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.loadup.components</groupId>
        <artifactId>loadup-components-gotone</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>loadup-components-gotone-test</artifactId>
    <packaging>jar</packaging>

    <name>loadup-components-gotone-test</name>
    <description>Gotone 组件测试模块</description>

    <dependencies>
        <!-- Gotone API -->
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-gotone-api</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- SMS Binder -->
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-gotone-binder-sms</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Email Binder -->
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-gotone-binder-email</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Push Binder -->
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-gotone-binder-push</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Database Component for ID Generation and Auditing -->
        <dependency>
            <groupId>com.github.loadup.components</groupId>
            <artifactId>loadup-components-database</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Spring Boot Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- JUnit 5 -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Mockito -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- AssertJ -->
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- JaCoCo -->
        <dependency>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.8.11</version>
            <scope>test</scope>
        </dependency>

        <!-- MySQL Driver for testing -->
        <dependency>
            <groupId>com.mysql</groupId>
            <artifactId>mysql-connector-j</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Spring Data JDBC Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jdbc</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Testcontainers for real DB testing -->
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Testcontainers MySQL -->
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>mysql</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <!-- Surefire 测试插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/*Test.java</include>
                        <include>**/*Tests.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

