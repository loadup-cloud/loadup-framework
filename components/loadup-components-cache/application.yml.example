# ========================================
# Example 1: Caffeine Cache (In-Memory)
# ========================================
# Uncomment to use Caffeine cache for development or standalone applications
#
#loadup:
#  cache:
#    type: caffeine
#    caffeine:
#      initial-capacity: 1000        # Initial cache capacity
#      maximum-size: 5000            # Maximum number of cache entries
#      expire-after-access-seconds: 600   # Expire after last access (10 minutes)
#      expire-after-write-seconds: 1200   # Expire after write (20 minutes)
#      allow-null-value: false       # Allow null values in cache
#      cache-config:
#        # Per-cache configuration
#        users:
#          expire-after-write: 30m
#          maximum-size: 10000
#          enable-random-expiration: true
#          random-offset-seconds: 300

# ========================================
# Example 2: Redis Cache (Distributed)
# ========================================
# Use this configuration for distributed applications or production environment
#
loadup:
  cache:
    type: redis
    redis:
      host: localhost     # Redis server host
      port: 6379         # Redis server port
      password:          # Redis password (optional)
      database: 0        # Redis database index
      cache-config:
        # Per-cache configuration
        users:
          expire-after-write: 30m
          maximum-size: 10000
          enable-random-expiration: true
          random-offset-seconds: 300

