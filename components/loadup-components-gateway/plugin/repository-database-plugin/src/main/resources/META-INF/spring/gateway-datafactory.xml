<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

    <bean id="gatewaySqlMapClientDAO" abstract="true">
        <property name="dataSource">
            <ref bean="gatewayBinder"/>
        </property>
        <property name="sqlMapClient">
            <ref bean="gatewaySqlMapClient"/>
        </property>
    </bean>

    <bean id="gatewaySqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="dataSource" ref="gatewayBinder"/>
        <property name="configLocations">
            <list>
                <value>classpath:gateway-sqlmap-auto.xml</value>
            </list>
        </property>
    </bean>

    <bean id="gatewayTransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource">
            <ref bean="gatewayBinder"/>
        </property>
    </bean>

    <bean id="gatewayTransactionTemplate"
          class="org.springframework.transaction.support.TransactionTemplate">
        <property name="transactionManager">
            <ref bean="gatewayTransactionManager"/>
        </property>
    </bean>

</beans>