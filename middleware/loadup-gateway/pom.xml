        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>loadup-gateway</artifactId>

    <packaging>pom</packaging>

    <name>LoadUp Middleware Gateway</name>
    <description>A flexible gateway framework with plugin architecture</description>
    <modules>
        <module>loadup-gateway-facade</module>
        <module>loadup-gateway-core</module>
        <module>loadup-gateway-starter</module>
        <module>loadup-gateway-test</module>
