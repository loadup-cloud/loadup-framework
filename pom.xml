        <module>components/upms/loadup-components-upms</module>
        <module>starter/loadup-framework-liquibase-starter</module>
        <module>starter/loadup-framework-data-jdbc-starter</module>
        <module>components/loadup-components-tracer</module>
        <module>components/loadup-components-database</module>
        <module>components/loadup-components-gateway</module>
        <module>components/loadup-components-test</module>
        <!--    <module>components/gateway/loadup-components-gateway-adaptor</module>-->
        <!--    <module>components/gateway/loadup-components-gateway-client</module>-->
