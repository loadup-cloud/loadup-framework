<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.github.loadup.framework</groupId>
        <artifactId>loadup-dependencies</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath/>
    </parent>
    <groupId>com.github.loadup.framework</groupId>
    <artifactId>loadup-framework-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>bom</module>
        <module>commons/loadup-commons-lang</module>
        <module>commons/loadup-commons-dto</module>
        <module>commons/loadup-commons-api</module>
        <module>commons/loadup-commons-util</module>
        <module>components/loadup-components-database</module>
        <module>components/loadup-components-liquibase</module>
        <module>components/loadup-components-extension</module>
        <module>components/loadup-components-cache</module>
        <module>components/loadup-components-captcha</module>
        <module>components/loadup-components-tracer</module>
        <module>components/loadup-components-scheduler</module>
        <module>components/loadup-components-gotone</module>
        <module>components/loadup-components-dfs</module>
        <module>components/loadup-components-testcontainers</module>
        <module>modules/loadup-modules-upms</module>
        <!--        <module>modules/loadup-modules-user</module>-->
    </modules>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>LoadUp Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/loadup-cloud/loadup-packages</url>
        </repository>
        <snapshotRepository>
            <id>github</id>
            <name>LoadUp Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/loadup-cloud/loadup-packages</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>

        <!-- Framework Version -->
        <loadup.framework.version>1.0.0-SNAPSHOT</loadup.framework.version>

        <!-- Dependencies Versions -->
        <spring-boot.version>3.1.2</spring-boot.version>
        <spring-cloud.version>2022.0.4</spring-cloud.version>
        <cola.version>4.3.2</cola.version>
        <fastjson.version>2.0.39</fastjson.version>
        <opentelemetry.version>1.57.0</opentelemetry.version>
        <transmittable-thread-local.version>2.14.2</transmittable-thread-local.version>
        <commons.io.version>2.20.0</commons.io.version>
        <skipUTs>false</skipUTs>
        <skipITs>true</skipITs>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.github.loadup.components</groupId>
                <artifactId>loadup-components-database</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.components</groupId>
                <artifactId>loadup-components-liquibase</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.components</groupId>
                <artifactId>loadup-components-captcha</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>

            <dependency>
                <groupId>com.github.loadup.commons</groupId>
                <artifactId>loadup-commons-api</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.commons</groupId>
                <artifactId>loadup-commons-dto</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.commons</groupId>
                <artifactId>loadup-commons-lang</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.framework</groupId>
                <artifactId>loadup-commons-util</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>

            <dependency>
                <groupId>com.github.loadup.components</groupId>
                <artifactId>loadup-components-gateway</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.components</groupId>
                <artifactId>loadup-components-testify</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>

            <dependency>
                <groupId>com.github.loadup.components</groupId>
                <artifactId>loadup-components-extension</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.components</groupId>
                <artifactId>loadup-components-testcontainers</artifactId>
                <version>${loadup.framework.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.github.loadup.modules</groupId>
                <artifactId>loadup-modules-upms</artifactId>
                <version>${loadup.framework.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>github</id>
            <url>https://maven.pkg.github.com/loadup-cloud/loadup-packages</url>
        </repository>

        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>aliyun</id>
            <url>https://maven.aliyun.com/repository/public</url>
        </repository>
    </repositories>

</project>
